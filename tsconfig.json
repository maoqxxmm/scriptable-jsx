{
  "compilerOptions": {
    "baseUrl": ".",
    // Ensure that .d.ts files are created by tsc, but not .js files
    "declaration": true,
    "emitDeclarationOnly": true,
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "strict": true,
    "declarationDir": "dist",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
